---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://paystems.com/contact",
    "url": "https://paystems.com/contact",
    "name": "Contact Us | PayStems",
    "description":
      "Get in touch with PayStems for all your payment orchestration needs. Whether you need support, have inquiries about our platform, or want to discuss a partnership, our team is here to help.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://paystems.com",
      "name": "PayStems",
      "description":
        "PayStems is a payment operating system for global enterprises, enabling seamless payment orchestration, fraud prevention, and alternative payment integrations through a single API.",
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>
