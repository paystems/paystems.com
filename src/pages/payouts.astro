---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/smart-routing.avif";
import personWorking from "@images/volume-based-config.avif";
import beforeAfter from "@images/default-fallback.avif";
import constructionWorkers from "@images/disputes.avif";
import aerialView from "@images/rule-based-config.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Comprehensive Payout Methods",
    subTitle:
      "Our platform empowers you to build payout workflows across every payment method available—from traditional bank transfers and card payouts to digital wallets and payout links. Process funds through multiple rails without writing a single line of code, ensuring that you can meet the diverse needs of suppliers, employees, and partners worldwide.",
    single: true,
    imgOne: blueprints,  // Keeping one image
    imgOneAlt: "Construction site before and after"
  },
  {
    isRightSection: false,
    title: "Boost Success with Smart Routing & Recovery",
    subTitle:
      "Maximize payout success with intelligent routing and smart retries. Our system automatically recovers failed transactions and routes funds through the optimal channel—improving success rates and reducing the chance of declined payments. Coupled with bulk and recurring payout support and automatic reconciliation, your payouts always reach their destination efficiently.",
    img: personWorking,
    imgAlt: "Construction site before and after",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Effortless Integration & Unified Operations",
    subTitle:
      "Streamline your entire payout operation with our simple, no‑code API integration. Manage all your payouts from a single, unified dashboard that delivers complete control and real-time analytics. PayStems platform makes it easy to integrate global payout capabilities into your system, so you can focus on growing your business.",
    single: true,
    imgOne: beforeAfter,  // Keeping one image
    imgOneAlt: "Construction workers orchestrating a project"
  },
  {
    isRightSection: false,
    title: "Tailored Solutions for Every Business Use Case",
    subTitle:
      "Whether you’re automating vendor payments, processing instant refunds, streamlining global payroll, or enabling marketplace payouts, our flexible platform adapts to your unique business requirements. Enjoy a payout solution designed for global outcomes, custom-built to meet the varied needs of your enterprise.",
    img: constructionWorkers,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Cost Optimization & Global Efficiency",
    subTitle:
    "Reduce costs while boosting efficiency with our optimized payout infrastructure. Benefit from streamlined FX and built‑in currency conversion that lower fees and optimize domestic and international transfers. Our intelligent routing not only speeds up your payouts but also minimizes processing costs—ensuring every transaction is as efficient as it is fast.",
    single: true,
    imgOne: aerialView,
    imgOneAlt: "In progress building structure",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title="Global Payouts & Settlements | PayStems"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://paystems.com/payouts",
    "url": "https://paystems.com/payouts",
    "name": "Global Payouts & Settlements | PayStems",
    "description": "Streamline global payouts with PayStems. Our payment operating system allows enterprises to automate mass payouts, optimize settlements, and expand internationally with fast, secure, and compliant payment distribution.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://paystems.com",
        "name": "PayStems",
        "description": "PayStems is a payment operating system that empowers enterprises to manage all aspects of their payment operations in one place."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Instant, Global Payouts"
    subTitle="Experience real-time payouts across borders with PayStems. Whether it’s refunds, vendor payments, loans, or global payroll, our direct integrations with networks, banks, and PSPs enable you to process payouts instantly. With support for over 50 countries, bank transfers, e‑wallets, and global card payouts via Visa Direct and Mastercard Send, you can send funds in real time—at lower fees and with built‑in FX support."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Take your business to the world"
    subTitle="Simplify global Go-to-market with 100+ local payment integrations in 50+ countries. Integrate local payment methods in minutes, improve conversion rates and build frictionless checkout experiences."
    mainStatTitle="99.999%"
    mainStatSubTitle="Ensures 99.999% uptime for uninterrupted reliability and availability."
    stats={[
      {
        stat: "$670Bn+",
        description: "Optimized for handling over $670 billion in annual total payment volume efficiently.",
      },
      {
        stat: "175Mn+",
        description: "Designed to process more than 175 million transactions daily with seamless scalability.",
      },
      {
        stat: "50K+",
        description: "Capable of reaching 50,000 transactions per second for peak performance.",
      },
    ]}
  />
</MainLayout>
