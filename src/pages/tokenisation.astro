---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/fraud-hub.avif";
import personWorking from "@images/anti-fraud.avif";
import beforeAfter from "@images/migration.avif";
import constructionWorkers from "@images/chargeback-sync.avif";
import aerialView from "@images/omniintegration.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Global Payment Orchestration & Integration",
    subTitle:
      "Power your global growth with no‑code integrations to 300+ PSPs and local payment methods. Trusted by 500+ enterprises worldwide, our technology streamlines payment operations, maximizes success rates, and simplifies payment orchestration across borders.",
    single: true,
    imgOne: blueprints,  // Keeping one image
    imgOneAlt: "Construction site before and after"
  },
  {
    isRightSection: false,
    title: "Customizable Token Vault & Orchestration",
    subTitle:
      "Develop your network tokenisation strategy your way with our plug‑and‑play token vault. Seamlessly integrate with your own token requestor, leverage multi‑dimensional token orchestration, implement alternate IDs for secure guest checkouts, and enjoy decoupled APIs that pass tokens to any processor.",
    img: personWorking,
    imgAlt: "Construction site before and after",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Optimized Recurring Payments & Retention",
    subTitle:
      "Ensure uninterrupted recurring payments with automatic updates of card details. Our account updater minimizes declined transactions, reduces churn, and boosts acceptance rates—delivering seamless, one‑click card payments that keep your recurring revenue flowing.",
    single: true,
    imgOne: beforeAfter,  // Keeping one image
    imgOneAlt: "Construction workers orchestrating a project"
  },
  {
    isRightSection: false,
    title: "Lower Fees & Cost Savings",
    subTitle:
      "Cut costs with network tokens that enjoy lower interchange fees compared to traditional transactions. By reducing manual card inputs and minimizing penalties from false declines, our solution helps you save on fees while driving higher conversion rates.",
    img: constructionWorkers,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Minimized Fraud & Enhanced Security",
    subTitle:
    "Reduce fraud rates and false declines by providing issuers with greater visibility and confidence through network tokens that are securely bound to your business. Enhance your payment security while ensuring a frictionless experience for your customers.",
    single: true,
    imgOne: aerialView,
    imgOneAlt: "In progress building structure",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title="Advanced Payment Tokenisation | PayStems"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://paystems.com/tokenisation",
    "url": "https://paystems.com/tokenisation",
    "name": "Advanced Payment Tokenisation | PayStems",
    "description": "Protect sensitive payment data with PayStems’ tokenisation technology. Our payment operating system enables enterprises to secure transactions and customer data, reducing PCI compliance burdens while enhancing trust and security.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://paystems.com",
        "name": "PayStems",
        "description": "PayStems is a payment operating system that empowers enterprises to manage all aspects of their payment operations in one place."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Secure Payments with Network Tokenisation"
    subTitle="Build the most secure payments experience using PayStems network token API to tokenize cards directly with the card schemes. Our solution reduces fraud, maximizes revenue, and enhances user experience with best‑in‑class tokenisation."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Take your business to the world"
    subTitle="Simplify global Go-to-market with 100+ local payment integrations in 50+ countries. Integrate local payment methods in minutes, improve conversion rates and build frictionless checkout experiences."
    mainStatTitle="99.999%"
    mainStatSubTitle="Ensures 99.999% uptime for uninterrupted reliability and availability."
    stats={[
      {
        stat: "$670Bn+",
        description: "Optimized for handling over $670 billion in annual total payment volume efficiently.",
      },
      {
        stat: "175Mn+",
        description: "Designed to process more than 175 million transactions daily with seamless scalability.",
      },
      {
        stat: "50K+",
        description: "Capable of reaching 50,000 transactions per second for peak performance.",
      },
    ]}
  />
</MainLayout>
