---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
//import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
    <!--
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore PayStems on GitHub"
    url="https://github.com/paystems"
  />
  -->

  <HeroSection
    title=`Global Payment <span
        class="text-yellow-500 dark:text-yellow-400">Operating System</span>`
    subTitle="PayStems is a payment operating system for global enterprises that want to effectively manage all aspects of their payment operations in one place. Our end-to-end solution connects merchants to a vast network of payment providers, fraud solutions, and alternative payment methods through one single, intuitive API."
    primaryBtn="Start Exploring"
    primaryBtnURL="/contact"
    secondaryBtn="Contact Sales Team"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    src={heroImage}
    alt="Stack of PayStems product architecture"
  />

  <ClientsSection
    title="Where everything payments connect"
    subTitle="Trusted by leading enterprises worldwide, PayStems simplifies payment orchestration and global coverage, boosts conversions, reduces fraud, and delivers seamless customer experiences."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="End-to-end payments infrastructure"
    subTitle="Everything you need to build a global payments stack for multi-country operations. Maximise conversions, reduce fraud, and build seamless checkout experiences."
    src={featureImage}
    alt="PayStems products"
    features={features}
  />

  <FeaturesNavs
    title=`Build or enhance your <span class="text-yellow-500 dark:text-yellow-400">Payments</span> stack, while maintaining control.`
    tabs={[
      {
        heading: "Reconciliation Engine",
        content:
          "Unified reconciliation framework with automated data fetch from multiple processors and banks, real-time exception handling, customizable reconciliation rules for an audit-ready output.",
        svg: "tools",
        src: tools,
        alt: "Yellow and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "Cost Observability",
        content:
          "Gain full visibility into payments cost, drill down into scheme, interchange, and acquirer fees to detect anomalies, deviations through a self-serve dashboard to audit, observe, and optimize your payments cost.",
        svg: "dashboard",
        src: dashboard,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "Advanced Security Vault",
        content:
          "Securely store and manage network tokens, PSP tokens, raw card details and other essential customer payment data to provide a seamless checkout experience for repeat users.",
        svg: "house",
        src: construction,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />

  <TestimonialsSection
    title="Take your business to the world"
    subTitle="Simplify global Go-to-market with 100+ local payment integrations in 50+ countries. Integrate local payment methods in minutes, improve conversion rates and build frictionless checkout experiences."
    ;
    testimonials={[
      {
        content:
          "PayStems expertise in the payments ecosystem and cutting-edge technology will help us to provide a seamless and hassle-free payment experience for our customers.",
        author: "Samantha Ruiz",
        role: "Chief Operating Officer | PayConfra Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "99.999%",
        description:
          "Ensures 99.999% uptime for uninterrupted reliability and availability.",
      },
      {
        count: "$670Bn+",
        description:
          "Optimized for handling over $670 billion in annual total payment volume efficiently.",
      },
      {
        count: "175Mn+",
        description:
          "Designed to process more than 175 million transactions daily with seamless scalability.",
      },
      {
        count: "50K+",
        description: "Capable of reaching 50,000 transactions per second for peak performance.",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Payments Infrastructure"
    subTitle="Everything that you need to build a payments stack for improved global coverage, better conversions, reduced fraud, and more."
    url="#"
  />
</MainLayout>
