---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/analytics.avif";
import personWorking from "@images/configure-advanced-rules.avif";
import beforeAfter from "@images/dispute-stage.avif";
import constructionWorkers from "@images/no-code-config.avif";
import aerialView from "@images/step-up-retries 2.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Streamlined Card and Digital Wallet Solutions",
    subTitle:
      "Simplify online card payments with solutions like Click to Pay and Apple Pay that eliminate the need for customers to re-enter payment data. With consolidating multiple cards into a single, secure wallet and FIDO‑certified card-not-present authentication, you benefit from enhanced security, built-in SCA compliance, and higher approval rates—all designed to boost checkout conversion.",
    single: true,
    imgOne: blueprints,  // Keeping one image
    imgOneAlt: "Construction site before and after"
  },
  {
    isRightSection: false,
    title: "Advanced 3DS Control and Fraud Reduction",
    subTitle:
      "Take 360° control of your 3DS authentication strategy with our adaptive 3DS engine. Configure triggers and challenge flows tailored to transaction and customer data while employing exhaustive risk checks and a rule engine that manages 3DS flows without any code. Our 3DS 2.2 SDK optimizes bank pages and auto-OTP capture to drive smooth, fraud‑resistant payment journeys.",
    img: personWorking,
    imgAlt: "Construction site before and after",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Multi-Factor & Bank Transfer Authentication",
    subTitle:
      "Our robust suite extends beyond card payments. Experience seamless authentication for bank transfers through out‑of‑band notifications, passkey‑based biometric verification, and TOTP flows designed for low-network areas. Plus, Tap & Pay via Bank App offers a fast, contactless experience supported by tokenisation, encryption, and real‑time fraud detection.",
    single: true,
    imgOne: beforeAfter,  // Keeping one image
    imgOneAlt: "Construction workers orchestrating a project"
  },
  {
    isRightSection: false,
    title: "Developer-Driven Payment Innovation",
    subTitle:
      "Empower your team with PayStems EMVCo‑certified, lightweight SDK—under 400kB and engineered for multiple authentication types across geographies. Enjoy frictionless two‑factor authentication with reliable auto‑OTP capture, ensuring that your payment integrations are as secure as they are seamless, whether you’re building a fully hosted checkout or custom flows via our unified API.",
    img: constructionWorkers,
    imgAlt:
      "Man in orange and black vest wearing white helmet holding yellow and black power tool",
  },
  {
    isRightSection: true,
    title: "Smart Retries for Maximum Conversion",
    subTitle:
    "Maximise your payment acceptance rates with intelligent smart retries. When a transaction soft declines, our adaptive system instantly routes the payment to an alternative PSP—without requiring customers to re-authenticate. This seamless retry mechanism not only boosts conversion rates but also reduces fraud, ensuring that every transaction stands the best chance of success.",
    single: true,
    imgOne: aerialView,
    imgOneAlt: "In progress building structure",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title="Secure Payment Authentication | PayStems"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://paystems.com/authentication",
    "url": "https://paystems.com/authentication",
    "name": "Secure Payment Authentication | PayStems",
    "description": "Enhance payment security with PayStems’ authentication solutions. Our payment operating system integrates industry-leading authentication methods to reduce fraud, ensure compliance, and protect global transactions in real time.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://paystems.com",
        "name": "PayStems",
        "description": "PayStems is a payment operating system that empowers enterprises to manage all aspects of their payment operations in one place."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Seamless, Frictionless Authentication"
    subTitle="PayStems intelligent authentication system shifts liability to the issuer while reducing customer friction. Our platform streamlines global payment authentication—supporting SCA, PSD2, and 3DS—so that whether you use Google Pay’s device-bound tokens, Payment Passkeys, or 1‑click biometric solutions, your customers enjoy a secure, effortless experience without manual data entry."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Take your business to the world"
    subTitle="Simplify global Go-to-market with 100+ local payment integrations in 50+ countries. Integrate local payment methods in minutes, improve conversion rates and build frictionless checkout experiences."
    mainStatTitle="99.999%"
    mainStatSubTitle="Ensures 99.999% uptime for uninterrupted reliability and availability."
    stats={[
      {
        stat: "$670Bn+",
        description: "Optimized for handling over $670 billion in annual total payment volume efficiently.",
      },
      {
        stat: "175Mn+",
        description: "Designed to process more than 175 million transactions daily with seamless scalability.",
      },
      {
        stat: "50K+",
        description: "Capable of reaching 50,000 transactions per second for peak performance.",
      },
    ]}
  />
</MainLayout>
